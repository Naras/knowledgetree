<?xml version="1.0" encoding="UTF-8"?>
<page xmlns="http://jboss.com/products/seam/pages"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://jboss.com/products/seam/pages http://jboss.com/products/seam/pages-2.2.xsd"
      no-conversation-view-id="/ScriptList.xhtml"
      login-required="true">

   <begin-conversation join="true" flush-mode="MANUAL"/>

   <action execute="#{scriptHome.wire}"/>

   <param name="scriptFrom"/>
   <param name="scriptId" value="#{scriptHome.scriptId}"/>


   <navigation from-action="#{scriptHome.persist}">
      <rule if-outcome="persisted">
         <end-conversation/>
         <redirect view-id="/Script.xhtml"/>
      </rule>
   </navigation>

   <navigation from-action="#{scriptHome.update}">
      <rule if-outcome="updated">
         <end-conversation/>
         <redirect view-id="/Script.xhtml"/>
      </rule>
   </navigation>

   <navigation from-action="#{scriptHome.remove}">
      <rule if-outcome="removed">
         <end-conversation/>
         <redirect view-id="/ScriptList.xhtml"/>
      </rule>
   </navigation>

</page>
