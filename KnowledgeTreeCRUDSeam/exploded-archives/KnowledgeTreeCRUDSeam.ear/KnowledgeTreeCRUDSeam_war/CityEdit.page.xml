<?xml version="1.0" encoding="UTF-8"?>
<page xmlns="http://jboss.com/products/seam/pages"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://jboss.com/products/seam/pages http://jboss.com/products/seam/pages-2.2.xsd"
      no-conversation-view-id="/CityList.xhtml"
      login-required="true">

   <begin-conversation join="true" flush-mode="MANUAL"/>

   <action execute="#{cityHome.wire}"/>

   <param name="cityFrom"/>
   <param name="cityCountryId" value="#{cityHome.cityId.countryId}"/>
   <param name="cityId" value="#{cityHome.cityId.id}"/>
   <param name="cityStateId" value="#{cityHome.cityId.stateId}"/>
   <param name="stateFrom"/>
   <param name="stateCountryId" value="#{stateHome.stateId.countryId}"/>
   <param name="stateId" value="#{stateHome.stateId.id}"/>
   <param name="countryFrom"/>
   <param name="countryId" value="#{countryHome.countryId}"/>




   <navigation from-action="#{cityHome.persist}">
      <rule if-outcome="persisted">
         <end-conversation/>
         <redirect view-id="/City.xhtml"/>
      </rule>
   </navigation>

   <navigation from-action="#{cityHome.update}">
      <rule if-outcome="updated">
         <end-conversation/>
         <redirect view-id="/City.xhtml"/>
      </rule>
   </navigation>

   <navigation from-action="#{cityHome.remove}">
      <rule if-outcome="removed">
         <end-conversation/>
         <redirect view-id="/CityList.xhtml"/>
      </rule>
   </navigation>

</page>
