<?xml version="1.0" encoding="UTF-8"?>
<page xmlns="http://jboss.com/products/seam/pages"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://jboss.com/products/seam/pages http://jboss.com/products/seam/pages-2.2.xsd"
      no-conversation-view-id="/LanguageList.xhtml"
      login-required="true">

   <begin-conversation join="true" flush-mode="MANUAL"/>

   <action execute="#{languageHome.wire}"/>

   <param name="languageFrom"/>
   <param name="languageId" value="#{languageHome.languageId}"/>


   <navigation from-action="#{languageHome.persist}">
      <rule if-outcome="persisted">
         <end-conversation/>
         <redirect view-id="/Language.xhtml"/>
      </rule>
   </navigation>

   <navigation from-action="#{languageHome.update}">
      <rule if-outcome="updated">
         <end-conversation/>
         <redirect view-id="/Language.xhtml"/>
      </rule>
   </navigation>

   <navigation from-action="#{languageHome.remove}">
      <rule if-outcome="removed">
         <end-conversation/>
         <redirect view-id="/LanguageList.xhtml"/>
      </rule>
   </navigation>

</page>
