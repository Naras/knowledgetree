<?xml version="1.0" encoding="UTF-8"?>
<page xmlns="http://jboss.com/products/seam/pages"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://jboss.com/products/seam/pages http://jboss.com/products/seam/pages-2.2.xsd"
      no-conversation-view-id="/PersonWorkRelationList.xhtml"
      login-required="true">

   <begin-conversation join="true" flush-mode="MANUAL"/>

   <action execute="#{personWorkRelationHome.wire}"/>

   <param name="personWorkRelationFrom"/>
   <param name="personWorkRelationId" value="#{personWorkRelationHome.personWorkRelationId}"/>


   <navigation from-action="#{personWorkRelationHome.persist}">
      <rule if-outcome="persisted">
         <end-conversation/>
         <redirect view-id="/PersonWorkRelation.xhtml"/>
      </rule>
   </navigation>

   <navigation from-action="#{personWorkRelationHome.update}">
      <rule if-outcome="updated">
         <end-conversation/>
         <redirect view-id="/PersonWorkRelation.xhtml"/>
      </rule>
   </navigation>

   <navigation from-action="#{personWorkRelationHome.remove}">
      <rule if-outcome="removed">
         <end-conversation/>
         <redirect view-id="/PersonWorkRelationList.xhtml"/>
      </rule>
   </navigation>

</page>
