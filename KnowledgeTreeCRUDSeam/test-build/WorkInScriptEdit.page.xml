<?xml version="1.0" encoding="UTF-8"?>
<page xmlns="http://jboss.com/products/seam/pages"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://jboss.com/products/seam/pages http://jboss.com/products/seam/pages-2.2.xsd"
      no-conversation-view-id="/WorkInScriptList.xhtml"
      login-required="true">

   <begin-conversation join="true" flush-mode="MANUAL"/>

   <action execute="#{workInScriptHome.wire}"/>

   <param name="workInScriptFrom"/>
   <param name="workInScriptScript" value="#{workInScriptHome.workInScriptId.script}"/>
   <param name="workInScriptWork" value="#{workInScriptHome.workInScriptId.work}"/>
   <param name="scriptFrom"/>
   <param name="scriptId" value="#{scriptHome.scriptId}"/>

   <param name="workFrom"/>
   <param name="workId" value="#{workHome.workId}"/>



   <navigation from-action="#{workInScriptHome.persist}">
      <rule if-outcome="persisted">
         <end-conversation/>
         <redirect view-id="/WorkInScript.xhtml"/>
      </rule>
   </navigation>

   <navigation from-action="#{workInScriptHome.update}">
      <rule if-outcome="updated">
         <end-conversation/>
         <redirect view-id="/WorkInScript.xhtml"/>
      </rule>
   </navigation>

   <navigation from-action="#{workInScriptHome.remove}">
      <rule if-outcome="removed">
         <end-conversation/>
         <redirect view-id="/WorkInScriptList.xhtml"/>
      </rule>
   </navigation>

</page>
