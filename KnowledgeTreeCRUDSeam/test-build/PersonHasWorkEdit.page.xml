<?xml version="1.0" encoding="UTF-8"?>
<page xmlns="http://jboss.com/products/seam/pages"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://jboss.com/products/seam/pages http://jboss.com/products/seam/pages-2.2.xsd"
      no-conversation-view-id="/PersonHasWorkList.xhtml"
      login-required="true">

   <begin-conversation join="true" flush-mode="MANUAL"/>

   <action execute="#{personHasWorkHome.wire}"/>

   <param name="personHasWorkFrom"/>
   <param name="personHasWorkPerson" value="#{personHasWorkHome.personHasWorkId.person}"/>
   <param name="personHasWorkRelation" value="#{personHasWorkHome.personHasWorkId.relation}"/>
   <param name="personHasWorkWork" value="#{personHasWorkHome.personHasWorkId.work}"/>
   <param name="personFrom"/>
   <param name="personId" value="#{personHome.personId}"/>
   <param name="personlifeFrom"/>
   <param name="personlifeId" value="#{personlifeHome.personlifeId}"/>


   <param name="personWorkRelationFrom"/>
   <param name="personWorkRelationId" value="#{personWorkRelationHome.personWorkRelationId}"/>

   <param name="workFrom"/>
   <param name="workId" value="#{workHome.workId}"/>



   <navigation from-action="#{personHasWorkHome.persist}">
      <rule if-outcome="persisted">
         <end-conversation/>
         <redirect view-id="/PersonHasWork.xhtml"/>
      </rule>
   </navigation>

   <navigation from-action="#{personHasWorkHome.update}">
      <rule if-outcome="updated">
         <end-conversation/>
         <redirect view-id="/PersonHasWork.xhtml"/>
      </rule>
   </navigation>

   <navigation from-action="#{personHasWorkHome.remove}">
      <rule if-outcome="removed">
         <end-conversation/>
         <redirect view-id="/PersonHasWorkList.xhtml"/>
      </rule>
   </navigation>

</page>
