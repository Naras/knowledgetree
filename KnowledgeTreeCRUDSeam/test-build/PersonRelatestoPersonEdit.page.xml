<?xml version="1.0" encoding="UTF-8"?>
<page xmlns="http://jboss.com/products/seam/pages"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://jboss.com/products/seam/pages http://jboss.com/products/seam/pages-2.2.xsd"
      no-conversation-view-id="/PersonRelatestoPersonList.xhtml"
      login-required="true">

   <begin-conversation join="true" flush-mode="MANUAL"/>

   <action execute="#{personRelatestoPersonHome.wire}"/>

   <param name="personRelatestoPersonFrom"/>
   <param name="personRelatestoPersonPerson1" value="#{personRelatestoPersonHome.personRelatestoPersonId.person1}"/>
   <param name="personRelatestoPersonPerson2" value="#{personRelatestoPersonHome.personRelatestoPersonId.person2}"/>
   <param name="personRelatestoPersonRelation" value="#{personRelatestoPersonHome.personRelatestoPersonId.relation}"/>
   <param name="personFrom"/>
   <param name="personId" value="#{personHome.personId}"/>
   <param name="personlifeFrom"/>
   <param name="personlifeId" value="#{personlifeHome.personlifeId}"/>


   <param name="personPersonRelationFrom"/>
   <param name="personPersonRelationId" value="#{personPersonRelationHome.personPersonRelationId}"/>



   <navigation from-action="#{personRelatestoPersonHome.persist}">
      <rule if-outcome="persisted">
         <end-conversation/>
         <redirect view-id="/PersonRelatestoPerson.xhtml"/>
      </rule>
   </navigation>

   <navigation from-action="#{personRelatestoPersonHome.update}">
      <rule if-outcome="updated">
         <end-conversation/>
         <redirect view-id="/PersonRelatestoPerson.xhtml"/>
      </rule>
   </navigation>

   <navigation from-action="#{personRelatestoPersonHome.remove}">
      <rule if-outcome="removed">
         <end-conversation/>
         <redirect view-id="/PersonRelatestoPersonList.xhtml"/>
      </rule>
   </navigation>

</page>
