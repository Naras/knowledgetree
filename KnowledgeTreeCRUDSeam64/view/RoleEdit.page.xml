<?xml version="1.0" encoding="UTF-8"?>
<page xmlns="http://jboss.com/products/seam/pages"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://jboss.com/products/seam/pages http://jboss.com/products/seam/pages-2.2.xsd"
      no-conversation-view-id="/RoleList.xhtml"
      login-required="true">

   <begin-conversation join="true" flush-mode="MANUAL"/>

   <action execute="#{roleHome.wire}"/>

   <param name="roleFrom"/>
   <param name="roleId" value="#{roleHome.roleId}"/>


   <navigation from-action="#{roleHome.persist}">
      <rule if-outcome="persisted">
         <end-conversation/>
         <redirect view-id="/Role.xhtml"/>
      </rule>
   </navigation>

   <navigation from-action="#{roleHome.update}">
      <rule if-outcome="updated">
         <end-conversation/>
         <redirect view-id="/Role.xhtml"/>
      </rule>
   </navigation>

   <navigation from-action="#{roleHome.remove}">
      <rule if-outcome="removed">
         <end-conversation/>
         <redirect view-id="/RoleList.xhtml"/>
      </rule>
   </navigation>

</page>
