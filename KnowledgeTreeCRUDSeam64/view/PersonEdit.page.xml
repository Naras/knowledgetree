<?xml version="1.0" encoding="UTF-8"?>
<page xmlns="http://jboss.com/products/seam/pages"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://jboss.com/products/seam/pages http://jboss.com/products/seam/pages-2.2.xsd"
      no-conversation-view-id="/PersonList.xhtml"
      login-required="true">

   <begin-conversation join="true" flush-mode="MANUAL"/>

   <action execute="#{personHome.wire}"/>

   <param name="personFrom"/>
   <param name="personId" value="#{personHome.personId}"/>
   <param name="personlifeFrom"/>
   <param name="personlifeId" value="#{personlifeHome.personlifeId}"/>



   <navigation from-action="#{personHome.persist}">
      <rule if-outcome="persisted">
         <end-conversation/>
         <redirect view-id="/Person.xhtml"/>
      </rule>
   </navigation>

   <navigation from-action="#{personHome.update}">
      <rule if-outcome="updated">
         <end-conversation/>
         <redirect view-id="/Person.xhtml"/>
      </rule>
   </navigation>

   <navigation from-action="#{personHome.remove}">
      <rule if-outcome="removed">
         <end-conversation/>
         <redirect view-id="/PersonList.xhtml"/>
      </rule>
   </navigation>

</page>
