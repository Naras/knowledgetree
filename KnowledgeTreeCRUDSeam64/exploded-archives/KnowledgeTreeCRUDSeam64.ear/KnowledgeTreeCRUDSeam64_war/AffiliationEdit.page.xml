<?xml version="1.0" encoding="UTF-8"?>
<page xmlns="http://jboss.com/products/seam/pages"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://jboss.com/products/seam/pages http://jboss.com/products/seam/pages-2.2.xsd"
      no-conversation-view-id="/AffiliationList.xhtml"
      login-required="true">

   <begin-conversation join="true" flush-mode="MANUAL"/>

   <action execute="#{affiliationHome.wire}"/>

   <param name="affiliationFrom"/>
   <param name="affiliationId" value="#{affiliationHome.affiliationId}"/>


   <navigation from-action="#{affiliationHome.persist}">
      <rule if-outcome="persisted">
         <end-conversation/>
         <redirect view-id="/Affiliation.xhtml"/>
      </rule>
   </navigation>

   <navigation from-action="#{affiliationHome.update}">
      <rule if-outcome="updated">
         <end-conversation/>
         <redirect view-id="/Affiliation.xhtml"/>
      </rule>
   </navigation>

   <navigation from-action="#{affiliationHome.remove}">
      <rule if-outcome="removed">
         <end-conversation/>
         <redirect view-id="/AffiliationList.xhtml"/>
      </rule>
   </navigation>

</page>
