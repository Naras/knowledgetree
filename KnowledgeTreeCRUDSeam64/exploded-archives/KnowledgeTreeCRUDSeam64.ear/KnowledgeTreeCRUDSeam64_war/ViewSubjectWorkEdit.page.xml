<?xml version="1.0" encoding="UTF-8"?>
<page xmlns="http://jboss.com/products/seam/pages"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://jboss.com/products/seam/pages http://jboss.com/products/seam/pages-2.2.xsd"
      no-conversation-view-id="/ViewSubjectWorkList.xhtml"
      login-required="true">

   <begin-conversation join="true" flush-mode="MANUAL"/>

   <action execute="#{viewSubjectWorkHome.wire}"/>

   <param name="viewSubjectWorkFrom"/>
   <param name="viewSubjectWorkRelation" value="#{viewSubjectWorkHome.viewSubjectWorkId.relation}"/>
   <param name="viewSubjectWorkSubject" value="#{viewSubjectWorkHome.viewSubjectWorkId.subject}"/>
   <param name="viewSubjectWorkWork" value="#{viewSubjectWorkHome.viewSubjectWorkId.work}"/>


   <navigation from-action="#{viewSubjectWorkHome.persist}">
      <rule if-outcome="persisted">
         <end-conversation/>
         <redirect view-id="/ViewSubjectWork.xhtml"/>
      </rule>
   </navigation>

   <navigation from-action="#{viewSubjectWorkHome.update}">
      <rule if-outcome="updated">
         <end-conversation/>
         <redirect view-id="/ViewSubjectWork.xhtml"/>
      </rule>
   </navigation>

   <navigation from-action="#{viewSubjectWorkHome.remove}">
      <rule if-outcome="removed">
         <end-conversation/>
         <redirect view-id="/ViewSubjectWorkList.xhtml"/>
      </rule>
   </navigation>

</page>
