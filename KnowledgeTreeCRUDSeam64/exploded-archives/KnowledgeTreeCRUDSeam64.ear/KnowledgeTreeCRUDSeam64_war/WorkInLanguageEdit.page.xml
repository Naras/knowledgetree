<?xml version="1.0" encoding="UTF-8"?>
<page xmlns="http://jboss.com/products/seam/pages"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://jboss.com/products/seam/pages http://jboss.com/products/seam/pages-2.2.xsd"
      no-conversation-view-id="/WorkInLanguageList.xhtml"
      login-required="true">

   <begin-conversation join="true" flush-mode="MANUAL"/>

   <action execute="#{workInLanguageHome.wire}"/>

   <param name="workInLanguageFrom"/>
   <param name="workInLanguageLanguage" value="#{workInLanguageHome.workInLanguageId.language}"/>
   <param name="workInLanguageWork" value="#{workInLanguageHome.workInLanguageId.work}"/>
   <param name="languageFrom"/>
   <param name="languageId" value="#{languageHome.languageId}"/>

   <param name="workFrom"/>
   <param name="workId" value="#{workHome.workId}"/>



   <navigation from-action="#{workInLanguageHome.persist}">
      <rule if-outcome="persisted">
         <end-conversation/>
         <redirect view-id="/WorkInLanguage.xhtml"/>
      </rule>
   </navigation>

   <navigation from-action="#{workInLanguageHome.update}">
      <rule if-outcome="updated">
         <end-conversation/>
         <redirect view-id="/WorkInLanguage.xhtml"/>
      </rule>
   </navigation>

   <navigation from-action="#{workInLanguageHome.remove}">
      <rule if-outcome="removed">
         <end-conversation/>
         <redirect view-id="/WorkInLanguageList.xhtml"/>
      </rule>
   </navigation>

</page>
